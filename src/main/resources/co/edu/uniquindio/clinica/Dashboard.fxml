<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContainer" styleClass="main-root" stylesheets="@styles1.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.controllers.DashboardController">

    <!-- TOP HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <Label styleClass="logo-title" text="Gestio Clínica">
                <font>
                    <Font name="System Bold" size="22" />
                </font>
            </Label>

            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox fx:id="sideBar" maxWidth="230" minWidth="230" styleClass="sidebar">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20" />
            </padding>

            <Label alignment="TOP_LEFT" styleClass="menu-title" text="Menú Principal">
                <VBox.margin>
                    <Insets bottom="15" />
                </VBox.margin>
            </Label>

            <Button fx:id="btnGoToForm" onAction="#onGoToForm" prefWidth="200" styleClass="menu-button" text="➕ Crear Cita" />
            <Button fx:id="btnGoToList" onAction="#onGoToList" prefWidth="200" styleClass="menu-button" text="Paciente" />
            <Button fx:id="btnGoToList" onAction="#onGoToList" prefWidth="200" styleClass="menu-button" text="Médico" />

            <Region VBox.vgrow="ALWAYS" />

            <Separator styleClass="sidebar-separator" />
            <Button fx:id="btnLogout" styleClass="menu-button-logout" text="⏻ Cerrar Sesión" />
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <VBox alignment="CENTER" spacing="15">
                <Label styleClass="title" text="Bienvenido al Panel de Control" />
                <Label styleClass="welcome-text" text="Selecciona una opción del menú lateral para comenzar." />
            </VBox>
        </StackPane>
    </center>
</BorderPane>
